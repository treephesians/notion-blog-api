# Local development example
# Copy as .env for local usage: cp .env.local.example .env

# Postgres (local docker)
POSTGRES_DB=notion
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# DATABASE_URL will be constructed by compose.local via POSTGRES_* vars

# Notion
NOTION_API_KEY=secret_xxx
NOTION_POST_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_PROJECT_DATABASE_ID=yyyyyyyyyyyyyyyyyyyyyyyyyyyyy

# S3 (optional for local testing)
S3_BUCKET=
S3_PREFIX=cover-image
AWS_REGION=ap-northeast-2
S3_ENDPOINT_URL=
S3_PUBLIC_BASE_URL=
